    <div class="ventana-modal modal">
        <form action="/update/ " method="post" enctype="multipart/form-data" class="formulario">
            <h2>Actualizar información</h2>
            <p>Manten tus datos actualizados </p>
            <div class="inputs">
                <div class="input">
                    <input type="text" placeholder="Nombre" name="nombre"
